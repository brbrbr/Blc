<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter" addfieldprefix="Blc\Component\Blc\Administrator\Field">
        <field name="search" type="text" description="COM_BLC_SEARCH_FILTER_SUBMIT" label="COM_USERS_FILTER_SEARCH_DESC" class="js-stools-search-string" />
        <field name="special" type="special" default="-1" label="COM_BLC_FILTER_SPECIAL" description="" onchange="this.form.submit();">
            <option value="-1">COM_BLC_OPTION_SPECIAL_ALL</option>
        </field>
        <field name="response" type="response" default="" label="COM_BLC_FILTER_RESPONSE" description="" onchange="this.form.submit();">
            <option value="-1">COM_BLC_OPTION_REPSONSE_ALL xxx</option>
           
        </field>
        <field name="destination" type="destination" default="-1" label="COM_BLC_FILTER_DESTINATION" description="" onchange="this.form.submit();">
            <option value="-1">COM_BLC_OPTION_DESTINATION</option>
        </field>
        <field name="plugin" type="plugin" default="" label="COM_BLC_FILTER_PLUGIN" description="" onchange="this.form.submit();" sql_select="`s`.`plugin_name` `plugin`" sql_from="`#__blc_synch` `s`" sql_where="`s`.`plugin_name` != '_Transient' AND EXISTS (SELECT * FROM `#__blc_instances` `i` WHERE `s`.`id` = `i`.`synch_id`)" sql_group="`plugin`" sql_order="`plugin` ASC" key_field="plugin">
            <option value="">COM_BLC_OPTION_PLUGIN_ALL</option>
        </field>
        <field name="working" column="working" type="filter" default="0" translate="1" label="COM_BLC_FILTER_WORKING" description="" onchange="this.form.submit();" sql_from="`#__blc_links` `a`" sql_select="`a`.`working`,  concat('COM_BLC_OPTION_WORKING_', `a`.`working`) `value`" sql_group="`a`.`working`" sql_order="`a`.`working` ASC" key_field="working" value_field="value">
            <option value="-1">COM_BLC_OPTION_WORKING_ALL</option>
        </field>
        <field name="mime" type="filter" column='mime' default="" label="COM_BLC_FILTER_MIME" description="" onchange="this.form.submit();">
            <option value="">COM_BLC_OPTION_MIME_ALL</option>
        </field>
    </fields>
    <fields name="list">
        <field name="fullordering" type="list" label="COM_BLC_LIST_FULL_ORDERING" description="COM_BLC_LIST_FULL_ORDERING_DESC" onchange="this.form.submit();" default="a.id DESC">
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.id ASC">COM_BLC_ID_ASC</option>
            <option value="a.id DESC">COM_BLC_ID_DESC</option>
            <option value="a.last_check_attempt ASC">COM_BLC_LAST_CHECK_ATTEMPT_ASC</option>
            <option value="a.last_check_attempt DESC">COM_BLC_LAST_CHECK_ATTEMPT_DESC</option>
            <option value="a.first_failure,a.last_check_attempt ASC">COM_BLC_FIRST_FAILURE_ASC</option>
            <option value="a.first_failure,a.last_check_attempt DESC">COM_BLC_FIRST_FAILURE_DESC</option>
            <option value="a.check_count ASC">COM_BLC_CHECK_COUNT_ASC</option>
            <option value="a.check_count DESC">COM_BLC_CHECK_COUNT_DESC</option>
            <option value="a.request_duration ASC">COM_BLC_REQUEST_DURATION_ASC</option>
            <option value="a.request_duration DESC">COM_BLC_REQUEST_DURATION_DESC</option>
        </field>
        <field name="limit" type="limitbox" label="COM_BLC_LIST_LIMIT" description="COM_BLC_LIST_LIMIT_DESC" class="input-mini" default="25" onchange="this.form.submit();" />
    </fields>
</form>